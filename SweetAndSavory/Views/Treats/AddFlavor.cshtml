@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h2>Add Flavor</h2>

<h4>Add a Flavor to this Treat: @Model.Name</h4>

@using (Html.BeginForm())
{
  <div class="mb-3">

  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  </div>

  <input type="submit" value="Add Flavor" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>