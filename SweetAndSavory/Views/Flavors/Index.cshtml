@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model IEnumerable<SweetAndSavory.Models.Flavor>

<h2>List of All Flavors</h2>
<hr />
@if (Model.Any())
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
else
{
  <p><strong>There are no flavors currently registered in our index.</strong></p>
}
<hr />
<p>@Html.ActionLink("Add New Flavor", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>